                transition: all 0.3s ease;
                z-index: 100;
            }

            .sidebar.active {
                left: 0;
            }

            .menu-toggle {
                display: block;
            }

            .main-content {
                grid-template-columns: 1fr;
            }
        }

        media (max-width: 768px) {
            .header {
                padding: 0 1rem;
            }

            .main-content {
                padding: 1rem;
            }

            .subjects-summary {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
